name: Deploy Tooplate Website

on:
  push:
    branches: [ main ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - name: Download Tooplate Template
        run: |
          # Replace with your Tooplate template download URL
          wget https://www.tooplate.com/zip-templates/2096_individual.zip
      - name: Extract Template Files
        run: |
          unzip 2096_individual.zip

      - name: Build and Deploy Website
        # Replace with your specific build and deployment commands
        run: |
          # Example for a static website using Jekyll
          cd 2096_individual.zip
          bundle install
          jekyll build
          # Replace with your deployment commands
        #  rsync -avz _site/ your-deployment-server:/path/to/website
      - name: Deploy to GitHub Pages
        uses: JamesIves/github-pages-deploy-action@4.1.0
        with:
          branch: gh-pages
          folder: build
